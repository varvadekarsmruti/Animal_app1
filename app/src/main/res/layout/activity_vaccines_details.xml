<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp">
    <LinearLayout
        android:id="@+id/ll_id_search"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:text="Search"
            android:id="@+id/button_search"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="150dp">
        </Button>
        <Spinner
            android:id="@+id/spinner_id_search"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_no_of_vacc"
        android:layout_below="@+id/ll_id_search"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="60dp">
        <TextView
            android:text="No. of vaccinations"
            android:id="@+id/tv_no_of_vacc"
            android:textSize="23dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="200dp">
        </TextView>
        <Spinner
            android:id="@+id/spinner_no_of_vacc"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_next_doc_visit"
        android:layout_below="@+id/ll_no_of_vacc"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="Next doctor visit"
            android:id="@+id/tv_next_doc_visit"
            android:textSize="23dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="200dp">
        </TextView>
        <DatePicker
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/datepicker_next_doc_visit">
        </DatePicker>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_next_vacc_date"
        android:layout_below="@+id/ll_next_doc_visit"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:text="Next vaccination date"
            android:id="@+id/tv_next_vacc_date"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="200dp">
        </TextView>
        <DatePicker
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/datepicker_next_vacc_date">
        </DatePicker>
    </LinearLayout>
    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@id/ll_next_vacc_date"
        android:id="@+id/button_done"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:text="DONE"
        />
</RelativeLayout>
</ScrollView>