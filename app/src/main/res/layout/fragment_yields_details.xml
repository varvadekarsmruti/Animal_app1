<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/ll_yieldsbuying">
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/milkyields"
                android:id="@+id/tv_milkyields"/>
            <Spinner
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/spinner_milkyields"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                >
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/ll_milkcontents"
            android:layout_below="@+id/ll_yieldsbuying">
        <TextView
            android:id="@+id/tv_milkcontents"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="@string/milk_contents">
        </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/ll_fat"
            android:layout_below="@+id/ll_milkcontents">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:text="@string/fat"/>
            <EditText
                android:layout_alignParentLeft="true"
                android:text=""
                android:layout_marginTop="10dp"
                android:id="@+id/et_fat_intake"
                android:layout_height="wrap_content"
                android:layout_width="150dp">
            </EditText>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_carbohydrate"
        android:layout_below="@+id/ll_fat">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="@string/carbohydrate"/>
        <EditText
            android:layout_alignParentLeft="true"
            android:text=""
            android:layout_marginTop="10dp"
            android:id="@+id/et_carbohydrate"
            android:layout_height="wrap_content"
            android:layout_width="150dp">
        </EditText>
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_calcium"
        android:layout_below="@+id/ll_carbohydrate">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="@string/calcium"/>
        <EditText
            android:layout_alignParentLeft="true"
            android:text=""
            android:layout_marginTop="10dp"
            android:id="@+id/et_calcium_intake"
            android:layout_height="wrap_content"
            android:layout_width="150dp">
        </EditText>
    </LinearLayout>

    </RelativeLayout>
</ScrollView>