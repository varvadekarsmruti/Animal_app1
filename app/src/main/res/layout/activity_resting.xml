<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.smrutimukundvarvadekar.animal_app.RestingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_search_id">
        <SearchView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
        </SearchView>
        <Spinner
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_id"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            >
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_place"
        android:layout_below="@+id/ll_search_id"
        >
        <TextView
            android:text="@string/place_given"
            android:id="@+id/tv_place"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="150dp">
        </TextView>
        <Spinner
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/spinner_place"
            android:layout_height="wrap_content"
            android:layout_width="150dp">
        </Spinner>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_buying"
        android:layout_below="@+id/ll_place">
        <TextView
            android:id="@+id/tv_buying"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="200dp"
            android:text="@string/buying_status">
        </TextView>
        <RadioButton
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/yes"
            android:text="@string/yes"/>
        <RadioButton
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/no"
            android:text="@string/no"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_weight"
        android:layout_below="@+id/ll_buying"
        >
        <TextView
            android:text="@string/weight_gain"
            android:id="@+id/tv_weight"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="150dp">
        </TextView>
        <Spinner
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/spinner_weight"
            android:layout_height="wrap_content"
            android:layout_width="150dp">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_dryingperiod"
        android:layout_below="@+id/ll_weight"
        >
        <TextView
            android:text="@string/drying_period"
            android:id="@+id/tv_dryingperiod"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_dryingperiod1"
        android:layout_below="@+id/ll_dryingperiod"
        >
    <Spinner
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:id="@+id/spinner_dryingperiod1"
        android:layout_height="wrap_content"
        android:layout_width="150dp">
    </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_distance"
        android:layout_below="@+id/ll_dryingperiod1"
        >
        <TextView
            android:text="@string/weight_gain"
            android:id="@+id/tv_distance"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="150dp">
        </TextView>
        <Spinner
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/spinner_distance"
            android:layout_height="wrap_content"
            android:layout_width="150dp">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_submit"
        android:layout_below="@+id/ll_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Submit"
            android:id="@+id/submit">

        </Button>
    </LinearLayout>
</RelativeLayout>
