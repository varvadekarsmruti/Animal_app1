<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_yield_at_farm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.smrutimukundvarvadekar.animal_app.YieldAtFarmActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_search_id">
        <SearchView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
        </SearchView>
        <Spinner
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_id"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            >
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_date"
        android:gravity="center"
        android:layout_below="@+id/ll_search_id">
        <DatePicker
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            >
        </DatePicker>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_milkproduced"
        android:layout_below="@+id/ll_date">
        <TextView
            android:text="@string/milk_produced"
            android:id="@+id/tv_milkproduced"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="150dp">
        </TextView>
        <Spinner
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/spinner_milkproduced"
            android:layout_height="wrap_content"
            android:layout_width="150dp">
        </Spinner>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_milkcontents"
        android:layout_below="@+id/ll_milkproduced">
    <TextView
        android:text="@string/milk_contents"
        android:id="@+id/tv_milkcontents"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_fat"
        android:layout_below="@+id/ll_milkcontents">
        <TextView
            android:text="@string/fat"
            android:id="@+id/tv_fat"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="150dp">
        </TextView>
        <Spinner
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/spinner_fat"
            android:layout_height="wrap_content"
            android:layout_width="150dp">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_protein"
        android:layout_below="@+id/ll_fat">
        <TextView
            android:text="@string/protein"
            android:id="@+id/tv_protein"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="150dp">
        </TextView>
        <Spinner
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/spinner_protein"
            android:layout_height="wrap_content"
            android:layout_width="150dp">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_carbohydrate"
        android:layout_below="@+id/ll_protein">
        <TextView
            android:text="@string/carbohydrate"
            android:id="@+id/tv_carbohydrate"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_width="150dp">
        </TextView>
        <Spinner
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/spinner_carbohydrate"
            android:layout_height="wrap_content"
            android:layout_width="150dp">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_lactation"
        android:layout_below="@+id/ll_carbohydrate">
        <TextView
            android:text="@string/lactation"
            android:id="@+id/tv_lactation"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_lactationdetail"
        android:layout_below="@+id/ll_lactation">
    <RadioButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:id="@+id/yes"
        android:text="@string/yes"/>
    <RadioButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:id="@+id/no"
        android:text="@string/no"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_milkman"
        android:layout_below="@+id/ll_lactationdetail">
        <TextView
            android:text="@string/milkman"
            android:id="@+id/tv_milkman"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/milkmanyesno"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_injection"
        android:layout_below="@+id/ll_milkman">
        <TextView
            android:text="@string/injection"
            android:id="@+id/tv_injection"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/ll_yes_no"
        android:layout_below="@+id/ll_injection">
        <RadioButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/yes1"
            android:text="@string/yes"/>
        <RadioButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:id="@+id/no1"
            android:text="@string/no"/>
    </LinearLayout>

</RelativeLayout>
